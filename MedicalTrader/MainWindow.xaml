                            <TreeViewItem
      Header="Amiga" />




                        </TreeViewItem>

                        <TreeViewItem
    Header="Закупки"
    IsExpanded="false">
                            <TreeViewItem
      Header="Amiga" />




                        </TreeViewItem>
                        <TreeViewItem
    Header="Склады"
    IsExpanded="true">





                            <TreeViewItem>
                                <TreeViewItem.Header>
                                    <StackPanel
          Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ViewList" />

                                        <TextBlock
            Margin="8 0 0 0"
            Text="Мои склады" />
                                    </StackPanel>
                                </TreeViewItem.Header>
                            </TreeViewItem>

                            <TreeViewItem>
                                <TreeViewItem.Header>
                                    <StackPanel
          Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="PlusCircle" />

                                        <TextBlock
            Margin="8 0 0 0"
            Text="Добавить" />
                                    </StackPanel>
                                </TreeViewItem.Header>
                            </TreeViewItem>


                        </TreeViewItem>
                        <TreeViewItem
    Header="Поставщики"
    IsExpanded="false">
                            <TreeViewItem
      Header="Amiga" />




                        </TreeViewItem>
                        <TreeViewItem
    Header="Документы"
    IsExpanded="false">
                            <TreeViewItem
      Header="Amiga" />




                        </TreeViewItem>
                    </TreeView>

                </StackPanel>

